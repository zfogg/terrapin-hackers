*
  box-sizing border-box

p
  white-space pre-wrap
  padding 0
  margin 0


input, textarea, button, select
  -webkit-appearance none
  border none
  background transparent
  &:focus
    outline none


// Main site styles
html, body
  height 100%
  min-height 100%

ol, ul
  margin 0
  padding 10px 0 0 1.5em
  ~p
    margin-left 1.5em
  li
    list-style-type decimal
    margin-bottom 12px

.tooltip
  cursor pointer
  text-decoration underline

body
  font-size 17px
  line-height 1.3em
  font-family 'Droid Serif', serif
  color #444
  text-shadow 1px 0 1px #E3E3E3

em
  font-style italic
strong
  font-weight bold

.empty
  // Kind of a hack to allow me empty columns that actually affect the grid.
  height 1px


