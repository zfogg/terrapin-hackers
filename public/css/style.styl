// Reset
@import nib
global-reset()
reset-html5()

*
  box-sizing border-box

input, textarea, button, select
  -webkit-appearance none
  border none
  background transparent
  &:focus
    outline none


// Main site styles
html, body
  height 100%
  min-height 100%


// Responsive stuff
buildGrid()

@media $max-grid-qMax
  grid-resize()
@media $large-grid-qMax
  grid-resize(0.9, "max")
@media $medium-grid-qMax
  grid-resize(0.8, "large")
  scaleLogo(0.8)
@media $small-grid-qMax
  grid-resize(0.7, "medium")
  scaleLogo(0.7)
@media $min-grid-qMax
  grid-resize(0.7, "small")
  scaleLogo(0.7)

